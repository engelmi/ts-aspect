{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "experimentalDecorators": true,
  }, 
  "include": [
    "src", "test"
  ],
  "exclude": [
    "node_modules", "test"
  ]
}
